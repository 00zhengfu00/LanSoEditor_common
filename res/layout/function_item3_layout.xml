<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
             <Button 
                android:id="@+id/id_function_item3_videoaddimg"    
                android:layout_height="60dip"  android:textSize="20sp" android:textStyle="bold"  android:layout_marginTop="30dip"
                android:text="在视频上增加图片" android:background="@drawable/function_item_btn_bg" android:layout_width="match_parent"/>
             
             
            <Button 
                android:id="@+id/id_function_item3_video2img"  
                android:layout_height="60dip"  android:textSize="20sp" android:textStyle="bold"  android:layout_marginTop="30dip"
                android:text="视频转化为图片" android:background="@drawable/function_item_btn_bg" android:layout_width="match_parent"/>
              <Button 
                android:id="@+id/id_function_item3_img2video"    
                android:layout_height="60dip"  android:textSize="20sp" android:textStyle="bold"  android:layout_marginTop="30dip"
                android:text="图片转视频" android:background="@drawable/function_item_btn_bg" android:layout_width="match_parent"/>
             <Button 
                android:id="@+id/id_function_item3_oneimage2video"    
                android:layout_height="60dip"  android:textSize="20sp" android:textStyle="bold"  android:layout_marginTop="30dip"
                android:text="单一图片转视频" android:background="@drawable/function_item_btn_bg" android:layout_width="match_parent"/>
             
               <Button 
                android:id="@+id/id_function_item3_imagefade"    
                android:layout_height="60dip"  android:textSize="20sp" android:textStyle="bold"  android:layout_marginTop="30dip"
                android:text="视频上增加渐入图片" android:background="@drawable/function_item_btn_bg" android:layout_width="match_parent"/>
        </LinearLayout>
</ScrollView>

