<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	   <TextView 
	       android:id="@+id/id_playbox_hint_1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/adv_hint1"
			    android:textColor="@color/blue"
			    android:layout_centerHorizontal="true"
			    android:layout_margin="10dip"
			    />
	
  <TextView 
	       android:id="@+id/id_playbox_hint_2"
	       android:layout_below="@id/id_playbox_hint_1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/adv_hint2"
			    android:layout_centerHorizontal="true"
			    android:layout_margin="10dip"
			    android:textColor="@color/red"
			    android:textStyle="bold"
			    />
	   <TextView 
	       android:id="@+id/id_playbox_hint_3"
	       android:layout_below="@id/id_playbox_hint_2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/adv_hint3"
			    android:textColor="@color/red"
			    android:layout_centerHorizontal="true"
			    android:layout_margin="10dip"
			    />

	     <TextView 
	       android:id="@+id/id_playbox_hint_4"
	       android:layout_below="@id/id_playbox_hint_3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/adv_hint4"
			    android:textColor="@color/blue"
			    android:layout_centerHorizontal="true"
			    android:layout_margin="10dip"
			    android:textStyle="bold"
			    />
  		<TextView 
  		    android:id="@+id/id_playbox_tv_count"
  		    android:layout_below="@id/id_playbox_hint_4"
  		    android:layout_width="wrap_content"
  		    android:layout_height="wrap_content"
  		    android:text="10"
  		    android:layout_centerInParent="true"
  		    android:textSize="20sp"/>
	     <Button 
	        android:id="@+id/id_playbox_hint_btn"
	        android:layout_below="@id/id_playbox_tv_count"
	        android:layout_marginTop="20dip"
	        android:layout_width="match_parent"
	        android:layout_marginLeft="20dip"
	        android:layout_marginRight="20dip"
	        android:layout_height="wrap_content"
	        android:text="Start"
	        android:background="#FFFF00"
	        android:layout_centerInParent="true"/>
</RelativeLayout>
