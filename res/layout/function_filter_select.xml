<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <Button 
                android:id="@+id/id_filter_function_realtime"  
                android:layout_height="60dip"  android:textSize="20sp" android:textStyle="bold"  android:layout_marginTop="30dip"
                android:text="实时滤镜" android:background="@drawable/function_item_btn_bg" android:layout_width="match_parent"/>
              <Button 
                android:id="@+id/id_filter_function_background"    
                android:layout_height="60dip"  android:textSize="20sp" android:textStyle="bold"  android:layout_marginTop="30dip"
                android:text="后台滤镜" android:background="@drawable/function_item_btn_bg" android:layout_width="match_parent"/>
              
              
              <TextView 
                  android:layout_width="match_parent"
                  android:layout_margin="10dip"
                  android:layout_height="wrap_content"
                  android:text="@string/filter_layout_hint"
                  android:textSize="18sp"/>
        </LinearLayout>
        
        
</ScrollView>
