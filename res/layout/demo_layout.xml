<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_40">
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    
         <Button
             android:id="@+id/id_main_use_default_videobtn"
             android:layout_width="0dip"
             android:layout_weight="5"
             android:layout_height="50dip"
             android:background="@drawable/rect_button_bg"
             android:text="使用默认演示视频"
             />
         <ImageView
             android:id="@+id/id_main_select_video"
             android:layout_width="0dip"
             android:layout_weight="2"
             android:layout_height="50dip"
             android:src="@drawable/ic_menu_archive"
             />
	</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_main_tvvideo"
	    android:textSize="18sp"/>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:text="以下仅为常用方法的举例,更多见VideoEditor.java源文件"/>
    
    <ListView
        android:id="@+id/id_demo_list"
        android:layout_marginTop="6dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="15dip"
        android:fadeScrollbars="false"
        android:background="@color/white" >
    </ListView>
</LinearLayout>
